generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  designation String?
  description String?
age Int?
  albums Album[]
}

model Album {
  id      Int     @id @default(autoincrement())
  title   String
  user_id Int
  user    User    @relation(fields: [user_id], references: [id])
  photos  Photo[]
}

model Photo {
  id        Int    @id @default(autoincrement())
  album_id  Int
   caption   String? 
  url       String
  thumbnail String
  album     Album  @relation(fields: [album_id], references: [id])
}
